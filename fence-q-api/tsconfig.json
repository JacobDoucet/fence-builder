{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "module": "commonjs",
      "declaration": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "target": "es2015",
      "moduleResolution": "node",
      "types": ["node", "express", "pg", "sendgrid"]
    },
    "include": [
      "./src/**/*.ts",
      "./src/app/*.json"
    ]
  }